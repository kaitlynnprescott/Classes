<div class="row">
    <div class="col-sm-12"> 
        <form id="static-form" method="post">
            <div class="form-group">
                <label for="string1">String To Check</label>
                <br/>
                <textarea class="form-control" rows="4" cols="50" id="string1" name="string1" placeholder="String To check"></textarea>
            </div>
            <div class="form-group hidden" id="error-container">
                <div class="alert alert-danger text-goes-here">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
            <div class="form-group hidden" id="palindrome-container">
                <div>
                    <ul class="resultlist is-palindrome" id="palindromes">
                    </ul>
                </div>
            </div>
            <div class="form-group hidden" id="notpalindrome-container">
                <div>
                    <ul class="resultlist not-palindrome" id="notpalindromes">
                    </ul>
                </div>
            </div>
        </form>
    </div>
</div>